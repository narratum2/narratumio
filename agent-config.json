{
  "agent": {
    "name": "Narratum Background Agent",
    "version": "1.0.0",
    "enabled": true,
    "development_mode": false
  },
  "monitoring": {
    "interval_seconds": 30,
    "performance_threshold_ms": 3000,
    "engagement_threshold_percent": 60,
    "scroll_depth_threshold_percent": 70,
    "session_timeout_minutes": 30
  },
  "thresholds": {
    "performance": {
      "load_time_warning": 2000,
      "load_time_critical": 3000,
      "fcp_target": 1800,
      "lcp_target": 2500,
      "cls_target": 0.1
    },
    "engagement": {
      "min_time_on_site": 60,
      "min_scroll_depth": 50,
      "min_interactions": 2,
      "bounce_rate_threshold": 70
    },
    "seo": {
      "title_min_length": 30,
      "title_max_length": 60,
      "meta_description_min": 120,
      "meta_description_max": 160,
      "h1_count_max": 1,
      "image_alt_coverage": 90
    }
  },
  "notifications": {
    "enabled": true,
    "critical_issues_only": false,
    "email_alerts": false,
    "browser_notifications": true,
    "dashboard_updates": true
  },
  "analytics": {
    "track_user_behavior": true,
    "track_performance": true,
    "track_conversions": true,
    "track_errors": true,
    "privacy_mode": false,
    "data_retention_days": 30
  },
  "optimization": {
    "auto_suggestions": true,
    "priority_filter": ["high", "medium", "low"],
    "max_suggestions": 10,
    "suggestion_cooldown_hours": 24
  },
  "reporting": {
    "daily_reports": true,
    "weekly_summaries": true,
    "monthly_analysis": true,
    "export_format": "json",
    "include_recommendations": true
  },
  "dashboard": {
    "enabled": true,
    "position": "bottom-left",
    "auto_hide": false,
    "compact_mode": false,
    "refresh_interval": 30
  },
  "integrations": {
    "google_analytics": {
      "enabled": false,
      "tracking_id": ""
    },
    "formspree": {
      "enabled": true,
      "form_id": "YOUR_FORM_ID"
    },
    "slack": {
      "enabled": false,
      "webhook_url": ""
    },
    "email": {
      "enabled": false,
      "smtp_config": {}
    }
  },
  "features": {
    "competitive_intelligence": false,
    "ai_recommendations": true,
    "automated_testing": false,
    "content_optimization": true,
    "performance_monitoring": true,
    "user_behavior_analysis": true,
    "seo_tracking": true,
    "accessibility_checks": true
  },
  "experimental": {
    "machine_learning": false,
    "predictive_analytics": false,
    "auto_optimization": false,
    "real_time_personalization": false
  }
}
